<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReadContentProvider">

    <Button
        android:id="@+id/btn_readContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Read Contact"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnReadMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Read Message"
        app:layout_constraintStart_toStartOf="@+id/btn_readContact"
        app:layout_constraintTop_toBottomOf="@+id/btn_readContact" />

    <Button
        android:id="@+id/btnReadCalllog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Read Callog"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnReadMessage" />
</androidx.constraintlayout.widget.ConstraintLayout>